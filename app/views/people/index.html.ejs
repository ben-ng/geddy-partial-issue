<div class="hero-unit">
  <h2>All People</h2>
  <%- linkTo('Create a new Person', addPersonPath, {class: 'btn pull-right'}); %>
</div>

<div id="people-list">
<% if (people) { %>
<% for (var i = 0, ii = people.length; i < ii; i++) { %>
  <div class="row list-item" id="person-<%= people[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(people[i].id, personPath(people[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= people[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>